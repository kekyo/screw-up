{
  "name": "screw-up",
  "version": "0.8.3",
  "description": "Simply package metadata inserter on Vite plugin",
  "keywords": [
    "vite",
    "plugin",
    "package",
    "metadata",
    "inserter"
  ],
  "author": "Kouji Matsui (@kekyo@mi.kekyo.net)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kekyo/screw-up.git"
  },
  "homepage": "https://github.com/kekyo/screw-up#readme",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "screw-up": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rv --npm . && npm i && vite build",
    "test": "rv --npm . && npm i && npm run build && vitest run"
  },
  "peerDependencies": {
    "glob": ">=11.0.0",
    "tar-stream": ">=3.0.0",
    "vite": ">=5.0.0"
  },
  "devDependencies": {
    "@types/node": ">=20.0.0",
    "@types/tar-stream": "^3.1.4",
    "dayjs": "^1.11.13",
    "tar": ">=7.4.0",
    "typescript": ">=5.0.0",
    "vite-plugin-dts": ">=3.0.0",
    "vitest": ">=1.0.0"
  }
}