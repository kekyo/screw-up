{
  "name": "screw-up",
  "version": "0.0.1",
  "description": "Simply package metadata inserter on Vite plugin",
  "keywords": [
    "vite",
    "plugin",
    "package",
    "metadata",
    "inserter"
  ],
  "author": "Kouji Matsui (@kekyo@mi.kekyo.net)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kekyo/screw-up.git"
  },
  "homepage": "https://github.com/kekyo/screw-up#readme",
  "readme": "README_pack.md",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "screw-up": "./dist/main.js"
  },
  "files": [
    "dist",
    "images/screw-up-120.png"
  ],
  "scripts": {
    "build": "npm run check-bootstrap; vite build",
    "test": "npm run build && vitest run",
    "dump": "npm run build && node dist/main.js dump",
    "pack": "npm run build && node dist/main.js pack --pack-destination artifacts/",
    "check-bootstrap": "[ ! -f src/generated/packageMetadata.ts ] && cp src/generated/packageMetadata-bootstrap src/generated/packageMetadata.ts"
  },
  "peerDependencies": {
    "async-primitives": ">=0.6.1",
    "dayjs": ">=1.11.0",
    "glob": ">=11.0.0",
    "isomorphic-git": ">=1.30.0",
    "json5": ">=2.2.0",
    "tar-vern": ">=1.1.0",
    "vite": ">=5.0.0"
  },
  "devDependencies": {
    "@types/node": ">=20.0.0",
    "prettier-max": ">=1.0.0",
    "simple-git": ">=3.0.0",
    "tar": ">=7.4.0",
    "typescript": ">=5.0.0",
    "vite-plugin-dts": ">=3.0.0",
    "vitest": ">=1.0.0"
  }
}
